{
    "Files": [
        {
            "Path": "Cargo.toml",
            "Modifiers": [
                {
                    "Match": "^(version = )\"[0-9]+.[0-9]+.[0-9]+\"",
                    "Replace": "$1\"$MAJ.$MIN.$PATCH\""
                }
            ]
        },
        {
            "Path": "Cargo.lock",
            "Modifiers": [
                {
                    "Match": "(name = \"contelia\"\nversion = )\"[0-9]+.[0-9]+.[0-9]+\"",
                    "Replace": "$1\"$MAJ.$MIN.$PATCH\""
                }
            ]
        }
    ]
}